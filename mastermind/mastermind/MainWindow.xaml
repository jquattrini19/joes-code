        <Button Tag="9" Name="row9_submit" Margin="10,0,10,0" Click="SubmitButton">Submit</Button>

        <TextBox Tag="answerBox" Height="20" Width="40" Name="row9_answerBox1" Background="BlanchedAlmond" Visibility="Hidden"></TextBox>
